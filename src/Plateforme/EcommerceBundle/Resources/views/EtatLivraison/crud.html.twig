{% extends "PlateformeCoreBundle::backoffice.html.twig" %}

{% block title %}
  Gestion des états de livraison - {{ parent() }}
{% endblock %}

{% block body %}
  
  <h1>Gestion des états de livraison</h1>
  
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('plateforme_core_bo_homepage') }}"><i class="fa fa-dashboard" aria-hidden="true"></i></a></li>
    <li class="breadcrumb-item active">États de livraison</li>
  </ol>
    
  <hr>
  
  <a href="{{ path('plateforme_ecommerce_etatslivraison_add') }}" class="btn btn-success btn-sm">
    <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Créer un état de livraison
  </a>
        
  <br><br>
  
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>ID</th>
          <th>Label</th>
          <th>Couleur</th>
          <th>Actions</th>
        </tr>
      </thead>
        {% for etat in etats %}
          <tr>
            <td>{{ etat.id }}</td>
            <td>{{ etat.label }}</td>
            <td><i class="fa fa-circle" aria-hidden="true" style="color:{{ etat.color }};"></i> {{ etat.color }}</td>
            <td>
              <a href="{{ path('plateforme_ecommerce_etatslivraison_edit', {'id': etat.id}) }}" data-toggle="tooltip" data-placement="top" title="Modifier">
                <i class="fa fa-pencil" aria-hidden="true"></i>
              </a>
              &nbsp;|&nbsp;
              <a href="{{ path('plateforme_ecommerce_etatslivraison_delete', {'id': etat.id}) }}" data-toggle="tooltip" data-placement="top" title="Supprimer" onclick="return confirm('Êtes-vous sûr ?');">
                <i class="fa fa-trash" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  
{% endblock %}