{% extends "PlateformeCoreBundle::backoffice.html.twig" %}

{% block title %}
  Gestion des attributs - {{ parent() }}
{% endblock %}

{% block body %}

  <h1>Gestion des catégories d'attributs</h1>

  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('plateforme_core_bo_homepage') }}"><i class="fa fa-dashboard" aria-hidden="true"></i></a></li>
    <li class="breadcrumb-item"><a href="{{ path('plateforme_core_bo_catalogue') }}">Catalogue</a></li>
    <li class="breadcrumb-item active">Catégories d'attributs</li>
  </ol>

  <hr>

  <a href="{{ path('plateforme_catalogue_attributs_categories_add') }}" class="btn btn-success btn-sm">
    <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Créer une catégorie d'attribut
  </a>

  <br><br>

  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Actions</th>
        </tr>
      </thead>
      {% for categorie in categories %}
        <tr>
          <td>{{ categorie.id }}</td>
          <td>{{ categorie.nom }}</td>
          <td>
            <a href="{{ path('plateforme_catalogue_attributs_categories_edit', {'id': categorie.id}) }}" data-toggle="tooltip" data-placement="top" title="Modifier">
              <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
            &nbsp;|&nbsp;
            <a href="{{ path('plateforme_catalogue_attributs_categories_delete', {'id': categorie.id}) }}" data-toggle="tooltip" data-placement="top" title="Supprimer" onclick="return confirm('Êtes-vous sûr ?');">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock %}