{% extends "PlateformeCoreBundle::frontoffice.html.twig" %}

{% block title %}
  Marques - {{ parent() }}
{% endblock %}

{% block body %}
  
  <div class="container">
    <h1>Marques</h1>

    <hr>

    {% if marques|length != 0 %}
      <div class="row">
        {% for marque in marques %}
          <div class="col-sm-3">
            <a href="{{ path('plateforme_catalogue_marques_view', {'slug': marque.slug}) }}" data-toggle="tooltip" data-placement="top" title="Modifier">
              {{ marque.titre }}
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      Aucun marque
    {% endif %}
    
  </div>
  
{% endblock %}