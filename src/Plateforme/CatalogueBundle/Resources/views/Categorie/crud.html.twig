{% extends "PlateformeCoreBundle::backoffice.html.twig" %}

{% block title %}
  Gestion des categories - {{ parent() }}
{% endblock %}

{% block body %}
  
  <h1>Gestion des categories</h1>
  
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('plateforme_core_bo_homepage') }}"><i class="fa fa-dashboard" aria-hidden="true"></i></a></li>
    <li class="breadcrumb-item"><a href="{{ path('plateforme_core_bo_catalogue') }}">Catalogue</a></li>
    <li class="breadcrumb-item active">Catégories</li>
  </ol>
    
  <hr>
  
  <a href="{{ path('plateforme_catalogue_categories_add') }}" class="btn btn-success btn-sm">
    <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Créer un categorie
  </a>
        
  <br><br>
  
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>ID</th>
          <th>Titre</th>
          <th>Catégories enfants</th>
          <th>Actions</th>
        </tr>
      </thead>
        {% for categorie in categories %}
          <tr>
            <td>{{ categorie.id }}</td>
            <td>{{ categorie.titre }}</td>
            <td>
              <a href="{{ path('plateforme_catalogue_categories_enfants_crud', {'id': categorie.id}) }}">
                enfants
              </a>
            </td>
            <td>
              <a href="{{ path('plateforme_catalogue_categories_view', {'slug': categorie.slug}) }}" data-toggle="tooltip" data-placement="top" title="Modifier">
                <i class="fa fa-eye" aria-hidden="true"></i>
              </a>
              &nbsp;|&nbsp;
              <a href="{{ path('plateforme_catalogue_categories_edit', {'id': categorie.id}) }}" data-toggle="tooltip" data-placement="top" title="Modifier">
                <i class="fa fa-pencil" aria-hidden="true"></i>
              </a>
              &nbsp;|&nbsp;
              <a href="{{ path('plateforme_catalogue_categories_clone', {'id': categorie.id}) }}" data-toggle="tooltip" data-placement="top" title="Cloner">
                <i class="fa fa-clone" aria-hidden="true"></i>
              </a>
              &nbsp;|&nbsp;
              <a href="{{ path('plateforme_catalogue_categories_delete', {'id': categorie.id}) }}" data-toggle="tooltip" data-placement="top" title="Supprimer" onclick="return confirm('Êtes-vous sûr ?');">
                <i class="fa fa-trash" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  
{% endblock %}