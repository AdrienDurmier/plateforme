{% extends "PlateformeCoreBundle::frontoffice.html.twig" %}

{% block title %}
  Nos produits - {{ parent() }}
{% endblock %}

{% block body %}

  <div class="container">
    <h1>Nos produits</h1>

    <hr>

    {% if categories|length != 0 %}
      <div class="row">
        {% for categorie in categories %}
          <div class="col-sm-3">
            <div class="card">
              <a href="{{ path('plateforme_catalogue_categories_view', {'slug': categorie.slug}) }}">
                <div class="card-header">
                  TODO image d'une cat√©gorie ?
                </div>
                <div class="card-body">
                  <div class="card-title">{{ categorie.titre }}</div>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      Aucune categorie
    {% endif %}

  </div>

{% endblock %}