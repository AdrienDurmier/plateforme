<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Espace Pro">
    <meta name="author" content="Adrien Durmier">
    <title>{% block title %}Espace Pro{% endblock %}</title>
    {% block stylesheets %}
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
      <link href="{{ asset('css/backoffice.css') }}" rel="stylesheet">
    {% endblock %}
    <script type="text/javascript" src="{{ asset('js/scripts.js') }}"></script>
  </head>

  <body>
    
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#">
        Espace Pro
      </a>
      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('plateforme_core_bo_homepage') }}">
              <i class="fa fa-dashboard" aria-hidden="true"></i>&nbsp;Tableau de bord
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('plateforme_core_bo_configuration') }}">
              <i class="fa fa-cogs" aria-hidden="true"></i>&nbsp;Configuration
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('plateforme_core_homepage') }}">
              <i class="fa fa-share-square-o" aria-hidden="true"></i>&nbsp;Retour à la boutique
            </a>
          </li>
        </ul>
        <ul class="navbar-nav my-2 my-lg-0">
          <li class="nav-item dropdown">
            <a class="nav-link" href="#" id="user_menu_dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-user-circle-o" aria-hidden="true"></i>
              {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <small>{{ app.user.username }}</small>
              {% endif %}
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user_menu_dropdown">
              <a class="dropdown-item" href="#">autre lien</a>
              <div class="dropdown-divider"></div>
              <a href="{{ path('fos_user_security_logout') }}" class="dropdown-item" >
                <i class="fa fa-sign-out" aria-hidden="true"></i>&nbsp;Déconnexion
              </a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
          <b>&nbsp;Gestion des pages</b>
          <ul class="nav nav-pills flex-column">
            <li class="nav-item">
              <a class="nav-link" href="{{ path('plateforme_core_homepage_edit') }}">
                <i class="fa fa-home" aria-hidden="true"></i>&nbsp;Gestion de l'accueil
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fa fa-file-text" aria-hidden="true"></i>&nbsp;Gestion des pages classiques
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fa fa-comments" aria-hidden="true"></i>&nbsp;Gestion du formulaire de contact
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('plateforme_core_page_faq_edit') }}">
                <i class="fa fa-question-circle" aria-hidden="true"></i>&nbsp;Gestion de la FAQ
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('plateforme_core_page_actualites_crud') }}">
                <i class="fa fa-newspaper-o" aria-hidden="true"></i>&nbsp;Gestion des actualités
              </a>
            </li>
          </ul>
          <hr>
          <b>&nbsp;Gestion du catalogue</b>
          <ul class="nav nav-pills flex-column">
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fa fa-folder" aria-hidden="true"></i>&nbsp;Categories
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('plateforme_catalogue_produits_crud') }}">
                <i class="fa fa-list-alt" aria-hidden="true"></i>&nbsp;Produits
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fa fa-truck" aria-hidden="true"></i>&nbsp;Fournisseurs
              </a>
            </li>
          </ul>
        </nav>

        <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
          {# On affiche tous les messages flash dont le nom est « success » #}
          {% for message in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissible fade in" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button> {{ message }}
            </div>
          {% endfor %} 
          {# On affiche tous les messages flash dont le nom est « info » #}
          {% for message in app.session.flashbag.get('info') %}
            <div class="alert alert-info alert-dismissible fade in" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button> {{ message }}
            </div>
          {% endfor %} 
          {# On affiche tous les messages flash dont le nom est « warning » #}
          {% for message in app.session.flashbag.get('warning') %}
            <div class="alert alert-warning alert-dismissible fade in" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button> {{ message }}
            </div>
          {% endfor %} 
          {# On affiche tous les messages flash dont le nom est « danger » #}
          {% for message in app.session.flashbag.get('danger') %}
            <div class="alert alert-danger alert-dismissible fade in" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button> {{ message }}
            </div>
          {% endfor %} 

          {% block body %}
          {% endblock %}

        </main>
      </div>
    </div>

    {% block javascripts %}
      <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    {% endblock %}

  </body>
</html>