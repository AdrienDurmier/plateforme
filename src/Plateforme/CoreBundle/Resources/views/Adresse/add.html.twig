{% extends "PlateformeCoreBundle::frontoffice.html.twig" %}

{% block title %}
    Mon compte  - {{ parent() }}
{% endblock %}

{% block body %}

  <div class="container">
    <h1>Mon compte</h1>
    
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="{{ path('plateforme_core_homepage') }}profile">Mon compte</a></li>
      <li class="breadcrumb-item"><a href="{{ path('plateforme_core_page_adresses') }}">Mes adresses</a></li>
      <li class="breadcrumb-item active">Ajouter une adresse</li>
    </ol>

    <div class="row">

      <aside class="col-3">
        <div class="nav flex-column nav-pills">
          <a class="nav-link" id="v-pills-infos-tab" href="{{ path('fos_user_profile_show') }}">
            <span class="d-none d-sm-block">Mes informations</span>
            <span class="d-sm-none align-content-center">
              <i class="fa fa-user-o"></i>
            </span>
          </a>
          <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-expanded="false">
            <span class="d-none d-sm-block">Mes messages</span>
            <span class="d-sm-none align-content-center">
              <i class="fa fa-envelope-o"></i>
            </span>
          </a>
          <a class="nav-link active" id="v-pills-adresses-tab" href="{{ path('plateforme_core_page_adresses') }}" role="tab">
            <span class="d-none d-sm-block">Mes adresses</span>
            <span class="d-sm-none align-content-center">
              <i class="fa fa-map-marker"></i>
            </span>
          </a>
          <a class="nav-link" id="v-pills-commandes-tab" data-toggle="pill" href="#v-pills-commandes" role="tab" aria-controls="v-pills-commandes" aria-expanded="false">
            <span class="d-none d-sm-block">Mes commandes</span>
            <span class="d-sm-none align-content-center">
              <i class="fa fa-shopping-cart"></i>
            </span>
          </a>
        </div>
      </aside>

      <section class="col-9">
        
        <h2>Cr√©ation d'une adresse</h2>

        {{ include("PlateformeCoreBundle:Adresse:form.html.twig") }}

      </section>

    </div>

  </div>
{% endblock %}