{% extends "PlateformeCoreBundle::frontoffice.html.twig" %}

{% block title %}
  Mon compte - {{ parent() }}
{% endblock %}

{% block body %}

  <h1>Mon compte</h1>
  <div class="container">
    
    {#<ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="{{ path('plateforme_core_homepage') }}profile">Mon compte</a></li>
      <li class="breadcrumb-item active">Mes adresses</li>
    </ol>#}

    <div class="row">

      <aside class="col-3">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
          <a class="nav-link" id="v-pills-infos-tab" href="todo">
            <span class="d-none d-sm-block">Mes informations</span>
            <span class="d-sm-none align-content-center">
              <i class="fa fa-user-o"></i>
            </span>
          </a>
          <a class="nav-link" id="v-pills-messages-tab" href="todo">
            <span class="d-none d-sm-block">Mes messages</span>
            <span class="d-sm-none align-content-center">
              <i class="fa fa-envelope-o"></i>
            </span>
          </a>
          <a class="nav-link active" id="v-pills-adresses-tab" href="#v-pills-adresses">
            <span class="d-none d-sm-block">Mes adresses</span>
            <span class="d-sm-none align-content-center">
              <i class="fa fa-map-marker"></i>
            </span>
          </a>
          <a class="nav-link" id="v-pills-commandes-tab" href="todo">
            <span class="d-none d-sm-block">Mes commandes</span>
            <span class="d-sm-none align-content-center">
              <i class="fa fa-shopping-cart"></i>
            </span>
          </a>
        </div>
      </aside>

      <section class="col-9">

        <a href="{{ path('plateforme_core_page_adresses_add') }}" class="btn btn-success">
          <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Cr√©er une adresse
        </a>

        <hr>

        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Titre</th>
                <th>Adresse</th>
                <th>Livraison</th>
                <th>Facturation</th>
                <th>Actions</th>
              </tr>
            </thead>
            {% for adresse in adresses %}
              <tr>
                <td>{{ adresse.titre }}</td>
                <td>{{ adresse.adresse }} {{ adresse.codePostal }} {{ adresse.Commune }} ({{ adresse.Pays }})</td>
                <td>
                  {% if adresse.livraison == 1 %}
                    <i class="fa fa-check" aria-hidden="true"></i>
                  {% else %}
                    <i class="fa fa-close" aria-hidden="true"></i>
                  {% endif %}
                </td>
                <td>
                  {% if adresse.facturation == 1 %}
                    <i class="fa fa-check" aria-hidden="true"></i>
                  {% else %}
                    <i class="fa fa-close" aria-hidden="true"></i>
                  {% endif %}
                </td>
                <td>
                  <a href="{{ path('plateforme_core_page_adresses_edit', {'id': adresse.id}) }}" data-toggle="tooltip" data-placement="top" title="Modifier">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  </a>
                  &nbsp;|&nbsp;
                  <a href="{{ path('plateforme_core_page_adresses_delete', {'id': adresse.id}) }}" data-toggle="tooltip" data-placement="top" title="Supprimer">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  </a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>

      </section>

    </div>

  </div>
{% endblock %}