{% extends "PlateformeCoreBundle::frontoffice.html.twig" %}

{% block title %}
  Bienvenue sur Micropuces - {{ parent() }}
{% endblock %}

{% block body %}
  
  <h1>{{ page_faq.titre }}</h1>
  
  <div>{{ page_faq.contenu|raw }}</div>
  
  
  {% for categorie in categories %}
    <h2>{{ categorie.label}}</h2>
    <div id="accordion_faq" role="tablist">
      {% for question in questions %}
        <div class="card">
          {% if question.faqCategorie.id == categorie.id %}
            <div class="card-header" role="tab" id="headingOne">
              <a data-toggle="collapse" href="#{{ question.id}}" aria-expanded="true" aria-controls="{{ question.id}}">
                <b>{{ question.question }}</b>
              </a>
            </div>
            <div id="{{ categorie.id}}" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion_faq">
              <div class="card-body">
                {{ question.reponse|raw }}
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endfor %}
  
{% endblock %}