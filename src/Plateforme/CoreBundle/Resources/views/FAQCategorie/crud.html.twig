{% extends "PlateformeCoreBundle::backoffice.html.twig" %}

{% block title %}
  Gestion des categories de la FAQ - {{ parent() }}
{% endblock %}

{% block body %}
  
  <div class="row">
    <div class="col-xs-6">
      <h1>Gestion des categories de la FAQ </h1>
    </div>
    <div class="col-xs-6 text-right">
      <br>
      <a href="{{ path('plateforme_core_page_faq_categorie_add') }}" class="btn btn-success">
        <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Ajouter une categorie
      </a>
    </div>
  </div>
        
  <hr>
  
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Cl√©</th>
          <th>Label</th>
          <th>Actions</th>
        </tr>
      </thead>
        {% for categorie in categories %}
          <tr>
            <td>{{ categorie.id }}</td>
            <td>{{ categorie.cle }}</td>
            <td>{{ categorie.label }}</td>
            <td>
              <a href="{{ path('plateforme_core_page_faq_categorie_edit', {'id': categorie.id}) }}" data-toggle="tooltip" data-placement="top" title="Modifier">
                <i class="fa fa-pencil" aria-hidden="true"></i>
              </a>
              &nbsp;|&nbsp;
              <a href="{{ path('plateforme_core_page_faq_categorie_delete', {'id': categorie.id}) }}" data-toggle="tooltip" data-placement="top" title="Supprimer">
                <i class="fa fa-trash" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  
{% endblock %}