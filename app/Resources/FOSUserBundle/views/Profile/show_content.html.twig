{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
  <h1>Mon compte</h1>

  <div class="row">

    <aside class="col-3">
      <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
        <a class="nav-link active" id="v-pills-infos-tab" data-toggle="pill" href="#v-pills-infos" role="tab" aria-controls="v-pills-infos" aria-expanded="true">
          <span class="d-none d-sm-block">Mes informations</span>
          <span class="d-sm-none align-content-center">
            <i class="fa fa-user-o"></i>
          </span>
        </a>
        <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-expanded="false">
          <span class="d-none d-sm-block">Mes messages</span>
          <span class="d-sm-none align-content-center">
            <i class="fa fa-envelope-o"></i>
          </span>
        </a>
        <a class="nav-link" href="{{ path('plateforme_core_page_adresses') }}">
          <span class="d-none d-sm-block">Mes adresses</span>
          <span class="d-sm-none align-content-center">
            <i class="fa fa-map-marker"></i>
          </span>
        </a>
        <a class="nav-link" id="v-pills-commandes-tab" data-toggle="pill" href="#v-pills-commandes" role="tab" aria-controls="v-pills-commandes" aria-expanded="false">
          <span class="d-none d-sm-block">Mes commandes</span>
          <span class="d-sm-none align-content-center">
            <i class="fa fa-shopping-cart"></i>
          </span>
        </a>
      </div>
    </aside>

    <section class="col-9">
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade active show" id="v-pills-infos" role="tabpanel" aria-labelledby="v-pills-infos-tab" aria-expanded="true">
          <blockquote>
            Bienvenue dans votre espace personnel {{ user.prenom }} {{ user.nom }}
          </blockquote>
          <p><b>Denière connexion le </b> : {{ user.lastLogin|date("d/m/Y h:i:s") }}</p>
          <p>
            <b>{{ 'profile.show.email'|trans }}</b> : {{ user.email }}
            <br>
            <b>Téléphone</b> : {{ user.telephone }}
            <br>
            <b>Fax</b> : {{ user.fax }}
        </div>
      </div>
    </section>

  </div>

</div>
